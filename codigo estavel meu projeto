<script type="module">

    import { db } from './firebase-config.js';

    import { ref, set, onValue } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-database.js";

    import { BANCO_ESPELHOS } from './banco-espelhos.js';

    import { pecas } from './estruturas.js';



    let activeEx = "41";

    const ids = ['editor-peca', 'q1a', 'q2a', 'q3a', 'q4a'];



    window.toggleTheme = () => {

        document.body.classList.toggle('dark-mode');

        const icon = document.querySelector('#theme-btn i');

        icon.className = document.body.classList.contains('dark-mode') ? 'fas fa-sun' : 'fas fa-moon';

    };



    // FUN√á√ÉO ROCKET: GERA PDF DA FOLHA FGV

    window.gerarDocumento = () => {

        const elemento = document.getElementById('area-impressao');

        const opt = {

            margin:       10,

            filename:     `OAB_E${activeEx}_Simulado_Joaquim.pdf`,

            image:        { type: 'jpeg', quality: 0.98 },

            html2canvas:  { scale: 2, useCORS: true },

            jsPDF:        { unit: 'mm', format: 'a4', orientation: 'portrait' }

        };



        if(confirm("Deseja gerar o PDF oficial da prova para o Hangar?")) {

            html2pdf().set(opt).from(elemento).save();

        }

    };



    window.injetarEspelho = () => {

        const esp = BANCO_ESPELHOS[activeEx];

        if(esp) {

            const checklist = esp.replace(/<[^>]*>/g, '').split('\n').filter(l => l.trim()).join('\n[ ] ');

            document.getElementById('editor-peca').innerText += "\n\n--- ‚öñÔ∏è GABARITO OFICIAL ---\n[ ] " + checklist;

            salvarTudo();

        }

    };



    window.salvarTudo = () => {

        const data = {};

        ids.forEach(id => data[id] = document.getElementById(id).innerText);

        set(ref(db, `estudos/${activeEx}`), { ...data, ts: Date.now() });

    };



    window.abrirEstruturas = () => {

        const grid = document.getElementById('peca-grid');

        grid.innerHTML = '';

        Object.keys(pecas).forEach(k => {

            const b = document.createElement('button');

            b.style = "width:100%; padding:12px; margin-bottom:5px; font-weight:bold; cursor:pointer;";

            b.innerText = k.toUpperCase();

            b.onclick = () => {

                document.getElementById('editor-peca').innerText += "\n" + pecas[k];

                fecharPecas();

                salvarTudo();

            };

            grid.appendChild(b);

        });

        document.getElementById('pec-modal').style.display = 'flex';

    };



    window.togglePdf = (mode) => {

        document.getElementById('pdf-frame').src = { 'p': `ro${activeEx}.pdf`, 'g': `ro${activeEx}-gabarito.pdf`, 'v': `vade.pdf` }[mode];

        document.getElementById('pdf-panel').classList.add('open');

    };



    window.resetarFolha = () => { if(confirm("Limpar hangar?")) { ids.forEach(id => document.getElementById(id).innerText = ""); salvarTudo(); } };

    window.fecharPecas = () => document.getElementById('pec-modal').style.display = 'none';



    const carregarDados = () => {

        document.querySelectorAll('.ex-num').forEach(el => el.innerText = activeEx);

        onValue(ref(db, `estudos/${activeEx}`), (s) => {

            const d = s.val();

            if(d) ids.forEach(id => { if(d[id]) document.getElementById(id).innerText = d[id]; });

        }, { onlyOnce: true });



        // RADAR LOGIC

        const txt = (BANCO_ESPELHOS[activeEx] || "").toUpperCase();

        const radar = document.getElementById('radar-peca');

        const DICIONARIO = [

            { id: "AGRAVO DE PETI√á√ÉO", display: "AGRAVO PETI√á√ÉO" },

            { id: "RECURSO ORDIN√ÅRIO", display: "REC. ORDIN√ÅRIO" },

            { id: "CONTESTA√á√ÉO", display: "CONTESTA√á√ÉO" },

            { id: "RECLAMA√á√ÉO", display: "RECLAMA√á√ÉO" }

        ];

        let achou = DICIONARIO.find(i => txt.includes(i.id));

        if (achou) {

            radar.innerHTML = `<span>RADAR</span><span style="font-size:0.5rem">${achou.display}</span>`;

            radar.classList.add('detectado');

        } else {

            radar.innerHTML = `<span>RADAR</span><span class="radar-blink">VARRENDO...</span>`;

            radar.classList.remove('detectado');

        }

    };



    const initNav = () => {

        const nav = document.getElementById('exam-nav');

        nav.innerHTML = '';

        for(let i=44; i>=35; i--) {

            const b = document.createElement('div');

            b.className = `exame-btn ${i == activeEx ? 'active' : ''}`;

            b.innerText = `E${i}`;

            b.onclick = () => { activeEx = i.toString(); initNav(); carregarDados(); };

            nav.appendChild(b);

        }

    };



    initNav(); carregarDados();

    ids.forEach(id => document.getElementById(id).addEventListener('input', salvarTudo));

</script>

</body>

